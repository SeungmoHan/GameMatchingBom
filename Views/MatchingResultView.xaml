<UserControl x:Class="NewMatchingBom.Views.MatchingResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Card -->
        <hc:Card Grid.Row="0" Style="{StaticResource ModernCard}" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="🎲 매칭 결과" 
                          Style="{StaticResource TitleText}"
                          Foreground="{StaticResource PrimaryBrush}"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="🔄 새로고침" 
                           Command="{Binding RefreshCommand}"
                           Style="{StaticResource AccentButton}"
                           Height="45"
                           Padding="20,0"
                           Margin="0,0,15,0"/>
                    <Button Content="📤 결과 내보내기" 
                           Command="{Binding ExportResultCommand}"
                           Style="{StaticResource SuccessButton}"
                           Height="45"
                           Padding="20,0"
                           Margin="0,0,15,0"/>
                    <Button Content="🗑️ 매칭 초기화" 
                           Command="{Binding ResetMatchingCommand}"
                           Style="{StaticResource DangerButton}"
                           Height="45"
                           Padding="20,0"/>
                </StackPanel>
            </StackPanel>
        </hc:Card>

        <!-- Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Matches Section -->
            <hc:Card Grid.Column="0" Style="{StaticResource ModernCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                              Text="⚔️ 매치 결과" 
                              Style="{StaticResource SubtitleText}"/>

                    <Border Grid.Row="1"
                           Background="{StaticResource SurfaceBrush}"
                           CornerRadius="8"
                           Padding="15">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Matches}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource CardBgBrush}" 
                                               CornerRadius="12" 
                                               Padding="20" 
                                               Margin="0,0,0,15"
                                               BorderBrush="{StaticResource SurfaceBrush}"
                                               BorderThickness="1">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black" Opacity="0.2" ShadowDepth="3" BlurRadius="10"/>
                                            </Border.Effect>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Blue Team -->
                                                <Border Grid.Column="0" 
                                                       Background="{StaticResource AccentBrush}" 
                                                       CornerRadius="10" 
                                                       Padding="15">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="{StaticResource AccentColor}" Opacity="0.3" ShadowDepth="2" BlurRadius="8"/>
                                                    </Border.Effect>
                                                    <StackPanel>
                                                        <StackPanel Orientation="Horizontal" 
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,10">
                                                            <TextBlock Text="🔵" FontSize="16" Margin="0,0,8,0"/>
                                                            <TextBlock Text="블루팀(1팀)" 
                                                                      FontWeight="Bold" 
                                                                      Foreground="White" 
                                                                      FontSize="16"/>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding BlueMember}" 
                                                                  Foreground="White" 
                                                                  FontFamily="Consolas"
                                                                  FontSize="13"
                                                                  TextWrapping="Wrap"
                                                                  TextAlignment="Center"
                                                                  LineHeight="20"/>
                                                    </StackPanel>
                                                </Border>

                                                <!-- VS Section -->
                                                <StackPanel Grid.Column="1" 
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center">
                                                    <Border Background="{StaticResource WarningBrush}" 
                                                           CornerRadius="20" 
                                                           Padding="12,8">
                                                        <TextBlock Text="VS" 
                                                                  FontWeight="Bold" 
                                                                  Foreground="White" 
                                                                  HorizontalAlignment="Center" 
                                                                  FontSize="16"/>
                                                    </Border>
                                                </StackPanel>

                                                <!-- Red Team -->
                                                <Border Grid.Column="2" 
                                                       Background="{StaticResource DangerBrush}" 
                                                       CornerRadius="10" 
                                                       Padding="15">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="{StaticResource DangerColor}" Opacity="0.3" ShadowDepth="2" BlurRadius="8"/>
                                                    </Border.Effect>
                                                    <StackPanel>
                                                        <StackPanel Orientation="Horizontal" 
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,10">
                                                            <TextBlock Text="🔴" FontSize="16" Margin="0,0,8,0"/>
                                                            <TextBlock Text="레드팀(2팀)" 
                                                                      FontWeight="Bold" 
                                                                      Foreground="White" 
                                                                      FontSize="16"/>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding RedMember}" 
                                                                  Foreground="White" 
                                                                  FontFamily="Consolas"
                                                                  FontSize="13"
                                                                  TextWrapping="Wrap"
                                                                  TextAlignment="Center"
                                                                  LineHeight="20"/>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </hc:Card>

            <!-- Remaining Users Section -->
            <hc:Card Grid.Column="2" Style="{StaticResource ModernCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="📄 남은 인원" 
                                  Style="{StaticResource SubtitleText}"/>
                        <Border Background="{StaticResource WarningBrush}" 
                               CornerRadius="12" 
                               Padding="8,4"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0">
                            <TextBlock Text="{Binding RemainUsers.Count, StringFormat='{}{0}명'}" 
                                      Foreground="White"
                                      FontWeight="Bold"
                                      FontSize="12"/>
                        </Border>
                    </StackPanel>

                    <Border Grid.Row="1"
                           Background="{StaticResource SurfaceBrush}"
                           CornerRadius="8"
                           Padding="10"
                           Margin="0,15,0,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding RemainUsers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource CardBgBrush}" 
                                               CornerRadius="8" 
                                               Padding="12,8" 
                                               Margin="0,0,0,8"
                                               BorderBrush="{StaticResource SurfaceBrush}"
                                               BorderThickness="1">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="6"/>
                                            </Border.Effect>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" 
                                                          FontWeight="SemiBold" 
                                                          Foreground="{StaticResource TextPrimaryBrush}"
                                                          FontSize="14"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <Border Background="{StaticResource PrimaryBrush}" 
                                                           CornerRadius="8" 
                                                           Padding="6,2">
                                                        <TextBlock Text="{Binding Tier}" 
                                                                  Foreground="White"
                                                                  FontSize="10"
                                                                  FontWeight="Medium"/>
                                                    </Border>
                                                    <Border Background="{StaticResource AccentBrush}" 
                                                           CornerRadius="8" 
                                                           Padding="6,2"
                                                           Margin="6,0,0,0">
                                                        <TextBlock Text="{Binding MainLine}" 
                                                                  Foreground="White"
                                                                  FontSize="10"/>
                                                    </Border>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </hc:Card>
        </Grid>
    </Grid>
</UserControl>