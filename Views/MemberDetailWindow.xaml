<hc:Window x:Class="NewMatchingBom.Views.MemberDetailWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:hc="https://handyorg.github.io/handycontrol"
           Title="{Binding MemberName, StringFormat=\{0\} 플레이 기록}" 
           Height="1000" 
           Width="1200"
           MinHeight="400"
           MinWidth="600"
           ResizeMode="CanResize"
           Background="{StaticResource DarkBgBrush}"
           WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <hc:Card Grid.Row="0" Style="{StaticResource ModernCard}" Margin="0,0,0,20">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding MemberName, StringFormat=🏆 \{0\}}" 
                              Style="{StaticResource TitleText}"
                              Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="플레이 기록 상세보기" 
                              Style="{StaticResource SubtitleText}"
                              Margin="0,5,0,0"
                              Opacity="0.7"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                       Content="✕" 
                       Command="{Binding CloseCommand}"
                       CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                       Style="{StaticResource DangerButton}"
                       Width="40" 
                       Height="40"
                       FontSize="16"
                       ToolTip="닫기"/>
            </Grid>
        </hc:Card>

        <!-- Statistics Summary -->
        <hc:Card Grid.Row="1" Style="{StaticResource ModernCard}" Margin="0,0,0,20">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" 
                       Background="{StaticResource PrimaryBrush}"
                       CornerRadius="10"
                       Padding="15"
                       Margin="0,0,10,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="🎮" 
                                  FontSize="24"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalGames}" 
                                  Style="{StaticResource TitleText}"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  FontSize="28"/>
                        <TextBlock Text="총 게임 수" 
                                  Style="{StaticResource BodyText}"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  Opacity="0.9"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Column="1" 
                       Background="{StaticResource SuccessBrush}"
                       CornerRadius="10"
                       Padding="15"
                       Margin="5,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="⭐" 
                                  FontSize="24"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding TotalPoints}" 
                                  Style="{StaticResource TitleText}"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  FontSize="28"/>
                        <TextBlock Text="총 획득 점수" 
                                  Style="{StaticResource BodyText}"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  Opacity="0.9"/>
                    </StackPanel>
                </Border>
            </Grid>
        </hc:Card>

        <!-- Records List -->
        <hc:Card Grid.Row="2" Style="{StaticResource ModernCard}">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                          Text="📝 플레이 기록 목록" 
                          Style="{StaticResource SubtitleText}"
                          Margin="0,0,0,15"/>
                
                <Border Grid.Row="1" 
                       Background="{StaticResource SurfaceBrush}"
                       CornerRadius="8">
                    <DataGrid ItemsSource="{Binding MemberRecords}"
                             AutoGenerateColumns="False"
                             HeadersVisibility="Column"
                             GridLinesVisibility="Horizontal"
                             Background="Transparent"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             BorderThickness="0"
                             RowBackground="{StaticResource CardBgBrush}"
                             AlternatingRowBackground="{StaticResource SurfaceBrush}"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled">
                        
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Height" Value="40"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="날짜" 
                                               Binding="{Binding Date}" 
                                               Foreground="White"
                                               IsReadOnly="True"
                                               Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Setter Property="Margin" Value="8"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="게임 타입" 
                                               Binding="{Binding Type}" 
                                               Foreground="White"
                                               IsReadOnly="True"
                                               Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Margin" Value="8"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="획득 점수" 
                                               Binding="{Binding Point}" 
                                               Foreground="White"
                                               IsReadOnly="True"
                                               Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Margin" Value="8"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="{StaticResource CardBgBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                <Setter Property="MinHeight" Value="40"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </Border>
            </Grid>
        </hc:Card>

        <!-- Footer -->
        <Border Grid.Row="3" 
               Background="{StaticResource SurfaceBrush}"
               CornerRadius="8"
               Padding="15"
               Margin="0,20,0,0">
            <TextBlock Text="💡 팁: 이 창은 ESC 키나 X 버튼으로 닫을 수 있습니다." 
                      Style="{StaticResource BodyText}"
                      HorizontalAlignment="Center"
                      Opacity="0.7"/>
        </Border>
    </Grid>
</hc:Window>